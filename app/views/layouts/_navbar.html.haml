%header.navigation
  .menu-wrapper
    = link_to image_tag("trellisd_small_logo.png"), root_path, class: "logo"
    %p.navigation-menu-button#js-mobile-menu MENU
    .nav
      %ul#navigation-menu
        %li.nav-link
          = link_to "Profile", user_path(current_user)
        %li.nav-link
          = link_to "Connections", user_connections_path(current_user)
        %li.nav-link
          = link_to "NotificationsPATH", root_path
        %li.nav-link
          = link_to "MessagesPATH", root_path
        %li.nav-link
          = link_to "Settings", user_settings_path(current_user)
    .navigation-tools
      .search-bar
        .search-and-submit
          %input{type: "search", placeholder: "Search users"}
          %button{type: "submit"}
            = image_tag("search-icon.png")
      = display_session_control_links