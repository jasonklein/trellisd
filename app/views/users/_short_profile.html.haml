#short_profile_content
  #user_image
    = image_tag current_user.image.url(:thumb)
  #user_name
    %h4
      = link_to current_user.first_name, user_path(current_user)
    = button_to "New Post", new_user_post_path(current_user), method: :get
#short_profile_stats
  %table
    %thead
      %tr
        %th{colspan: '1'}
          %h5
            = link_to 'Posts', user_path(current_user)
        %th{colspan: '3'}
          %h5
            = link_to 'Connections', user_connections_path(current_user)
      %tr
        %th.sub_header.top_border
          = current_user.posts.count
        %th.sub_header.top_border
          1&deg;
        %th.sub_header.top_border
          2&deg;
        %th.sub_header.top_border
          3&deg;
    %tbody
      %tr
        %td
        %td
          = @all_connections[:primary].count
        %td
          = @all_connections[:secondary].count
        %td
          = @all_connections[:tertiary].count