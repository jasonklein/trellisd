= form_for @user do |f|
  - if @user.errors.any?
    .errors
      = @user.errors.full_messages.join(', ').downcase.capitalize
  = f.label :first_name
  = f.text_field :first_name
  = f.label :last_name
  = f.text_field :last_name
  = f.label 'Image (jpg, jpeg, gif or png)'
  = f.file_field(:image, accept: 'image/jpg, image/jpeg image/gif, image/png')
  = f.label :bio
  %em
    No more than 300 characters.
  = f.text_field :bio, maxlength: 300
  %strong
    Location
  %br
  %em
    Location information used for geolocating your posts. Your postcode will not be displayed to other users.
  = f.label :city
  = f.text_field :city
  = f.label :postcode
  = f.text_field :postcode
  = f.submit
%br
= button_to 'Cancel', :back, method: :get
%br
